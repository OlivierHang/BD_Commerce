{% extends 'base.html.twig' %}

{% block title %}Commande - BD Commerce
{% endblock %}

{% block content %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID Commande</th>
				<th scope="col">Date de commande</th>
				<th scope="col">Total</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			{% for com in commandes %}
				<tr>
					<td>{{ com.id }}</td>
					<td>{{ com.createAt|date('d/m/Y') }}</td>
					<td>{{ com.total }}â‚¬</td>
					<td>
						<a href="{{ path('commande_detail', {'idCommande' : com.id}) }}" class="btn btn-info btn-md">Detail</a>
						{% if com.isPaid == false %}
							|
							<a href="" class="btn btn-primary">Payer</a>
						{% endif %}
					</td>
					<td></td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
